\subsection{The experiment}

\begin{frame}{NA62 Experiment at CERN}{}

	\begin{columns}
	 	\column{.3\textwidth}
	 	\begin{block}{$K^+$ production}
	    		High energy protons colliding with a beryllium target
			\end{block}
	    \column{.65	\textwidth}
	    	\begin{block}{Measurement}
		    	\begin{itemize}
		    	  \item 0.8 GHz particles crossing 
				  \item 9 ``cameras'' shooting a picture at every decay (10~MHz)
				\end{itemize}	    		
			\end{block}
	\end{columns}
	
